{
  "name": "ethereum-network",
  "version": "0.1.0",
  "description": "A community guide for the Ethereum Network",
  "author": "Ethereum Network",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "dev": "npm run serve & npm start",
    "server-lint": "standard ./src/server/**/*.js",
    "server-lint-fix": "standard --fix ./src/server/**/*.js",
    "start": "nodemon ./src/server/bin/dev"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "convict": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "ethereum-address": "0.0.4",
    "express": "^4.16.4",
    "express-list-routes": "^0.1.4",
    "fs": "0.0.1-security",
    "helmet": "^3.18.0",
    "lodash": "^4.17.11",
    "material-design-icons-iconfont": "^3.0.3",
    "method-override": "^3.0.0",
    "morgan": "^1.9.1",
    "register-service-worker": "^1.6.2",
    "roboto-fontface": "*",
    "vue": "^2.6.6",
    "vue-router": "^3.0.1",
    "vuetify": "^1.5.14",
    "vuex": "^3.0.1",
    "web3": "^1.0.0-beta.55",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.5.0",
    "@vue/cli-plugin-eslint": "^3.7.0",
    "@vue/cli-plugin-pwa": "^3.5.1",
    "@vue/cli-service": "^3.5.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.19.0",
    "prerender-spa-plugin": "^3.2.1",
    "standard": "^12.0.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue-cli-plugin-prerender-spa": "^1.1.5",
    "vue-cli-plugin-vuetify": "^0.5.0",
    "vue-template-compiler": "^2.5.21",
    "vuetify-loader": "^1.0.5"
  },
  "vue": {
    "pluginOptions": {
      "prerenderSpa": {
        "renderRoutes": [
          "/",
          "/about",
          "/projects",
          "/explorer"
        ],
        "useRenderEvent": true,
        "headless": true,
        "onlyProduction": true
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/standard"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bugs": {
    "url": "https://github.com/EthereumNetwork/website/issues"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "homepage": "https://ethereum.network",
  "keywords": [
    "Ethereum"
  ],
  "license": "MPL-2.0",
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EthereumNetwork/website.git"
  }
}
